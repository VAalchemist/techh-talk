<section class="">

<div>
  <a href="/dashboard">Dashboard</a>
  <h2>Edit Post</h2>
</div>


<form id="edit-post-form">
  <input name="post-title" type="text" value="{{post.title}}" />
  <p>({{post.post_text}})</p>

<div>
  {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}

  <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
</div>

  <div>
    <button type="submit">Save</button>
    <button type="button" id="delete-post-btn">Delete</button>
  </div>
</form>

<form>
  <textarea class="comment-body"></textarea>
  <button type="submit">Comment</button>
</form>

{{> comments post.comments}}
</section>

<script src="/public/js/edit-post.js"></script>
<script src="/public/js/comment.js"></script>
<script src="/public/js/delete-post.js"></script>
