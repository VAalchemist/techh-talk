<div class="post">

<div>
  <h2>Edit Post</h2>
</div>


<form id="edit-post">
  <input name="post-id" type="hidden" value="{{post.id}}" />

  <label for="post-title" class="">Title</label>
  <input name="post-title" type="text" value="{{post.title}}" />

  <label for="post-body" class="">Content</label>
  <textarea name="post-body" >{{post.body}}</textarea>

  <div>
    <button type="submit">Update</button>
    <button type="button" id="delete-btn">Delete</button>
  </div>
</form>
</div>

<script src="/public/js/edit.js"></script>